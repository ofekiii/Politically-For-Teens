<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginRight="0dp"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/black"
        android:id="@+id/threadTitle_TV"
        android:text="Thread Title "
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="0dp"
            android:background="@android:color/holo_blue_light"
            android:textColor="@android:color/black"
            android:id="@+id/fname_TV"
            android:text="Name of Poster "          
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#147880"
            android:gravity="right"
            android:layout_marginRight="0dp"
            android:textColor="@android:color/black"
            android:id="@+id/fname_TV"
            android:text="Thread Description"          
            android:textSize="14dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
    
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/black"
        android:hint="Write Comment"
        android:id="@+id/comment_ET"/>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:text="Against"
            android:textSize="12dp"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/black"
            android:id="@+id/againstRB"/>

        <RadioButton
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Pro"
            android:textSize="12dp"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/black"
            android:id="@+id/proRB"/>

    </LinearLayout>

    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="Post"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:id="@+id/postCommentBtn"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
    
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:id="@+id/listView2"/>

    </LinearLayout>

    </ScrollView>

</LinearLayout>
