<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
       android:gravity="center_horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="SignUp"
        android:textSize="30dp"
        android:layout_marginLeft="90dp"
        android:textStyle="bold"/>

    <LinearLayout
         android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        
        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="First Name"
            android:id="@+id/fName"
/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="*"
            android:textColor="#d81515"
            android:id="@+id/warnFName"
            android:visibility="invisible"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
       
        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="First Name"
            android:id="@+id/lName"
            />
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="*"
            android:textColor="#d81515"
            android:id="@+id/warnLName"
            android:visibility="invisible"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        
        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:hint="age"
            android:id="@+id/age"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="*"
            android:textColor="#d81515"
            android:id="@+id/warnAge"
            android:visibility="invisible"/>
        </LinearLayout>
   
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        
        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="Email"
            android:id="@+id/email"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="*"
            android:textColor="#d81515"
            android:id="@+id/warnEmail"
            android:visibility="invisible"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        
        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="Password"
            android:id="@+id/Password"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="*"
            android:textColor="#d81515"
            android:id="@+id/warnPassword"
            android:visibility="invisible"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
       
        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="Match Password"
            android:id="@+id/mPassword"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="*"
            android:textColor="#d81515"
            android:id="@+id/warnMPassword"
            android:visibility="invisible"/>
        </LinearLayout>
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="Gender:"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_marginTop="10dp"/>
        <RadioButton
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="M"
            android:id="@+id/Male"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />
        <RadioButton
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="F"
            android:id="@+id/Female"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="*"
            android:textColor="#d81515"
            android:id="@+id/warnGender"
            android:visibility="invisible"/>
        </LinearLayout>
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">
    <Button
        android:layout_width="200dp"
          android:layout_height="60dp"
         android:layout_marginLeft="90dp"
        android:layout_marginTop="30dp"
          android:id="@+id/btnRegister"
          android:text="Sign Up"/>
        </LinearLayout>
</LinearLayout>
